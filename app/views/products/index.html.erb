<body>


<div class="block">
  <h1 class="title">Nos Chatons :</h1>
  <% if current_customer && current_customer.is_admin? %>
<%= link_to "New product", new_product_path %>
<% end %>
  <div class="product-grid">
    <%# Utilisez une boucle each pour afficher chaque produit de votre collection %>
    <% @products.each do |product| %>
      <div class="product">
    
      <div style="text-align: center;">
      <% if product.image.attached? %>
        <%= image_tag(product.image, style: "height: 250px; border-radius: 15px; box-shadow: 1px 1px 12px 
        #555;")  %>
      <% end %>
      
      <h2><%= product.name %></h2>
      <p><%= product.description %></p>
      <p>Price: <%= number_to_currency(product.price) %></p>
      <p>Categories: <%= product.categories %></p>
      <%= link_to "Show this product", product_path(product), class: "btn" %>
    </div>
      </div>
    <% end %>
  </div>
</div>
</body>
